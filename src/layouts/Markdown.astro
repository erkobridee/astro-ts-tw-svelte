---
// https://docs.astro.build/en/guides/markdown-content/#frontmatter-layout-property

// https://tailwindcss.com/blog/tailwindcss-typography
// https://github.com/tailwindlabs/tailwindcss-typography

import Layout from '~/layouts/Main.astro';

import Link from '~/components/Link.astro';

const { frontmatter } = Astro.props;
---

<Layout
  content={{
    title: frontmatter.title
  }}
>
  <div class="flex flex-col gap-2 divide-y divide-gray-300 p-10">
    <div class="flex justify-between">
      <div class="flex items-center gap-4">
        <Link href="/">Home page</Link>

        <div class="font-semibold">Markdown Content</div>
      </div>

      <div class="flex items-center gap-2">
        <Link href="https://tailwindcss.com/blog/tailwindcss-typography"
          >Introducing Tailwind CSS Typography - TailwindCSS Blog</Link
        >

        <Link
          href="https://docs.astro.build/en/recipes/tailwind-rendered-markdown/#setting-up-tailwindcsstypography"
          >Setting Up @tailwindcss/typography - Astro Docs</Link
        >
      </div>
    </div>

    <article class="prose lg:prose-l p-4">
      <slot />
    </article>
  </div>
</Layout>
