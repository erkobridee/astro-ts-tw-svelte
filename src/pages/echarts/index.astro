---
import Layout from '~/layouts/BaseLayout.astro';

import Link from '~/components/Link.astro';

import EChartsStarterExample from '~/components/apache-echarts/examples/StarterExample.svelte';

const PAGE_TITLE = 'Apache ECharts';
---

<Layout
  content={{
    title: PAGE_TITLE
  }}
>
  <div class="flex min-h-screen flex-col gap-4 p-10">
    <div class="flex items-center gap-2">
      <Link href="/">Home page</Link>

      <div class="font-semibold">{PAGE_TITLE}</div>
    </div>

    <div class="flex h-full grow flex-col">
      <div class="relative grow">
        <EChartsStarterExample client:load />
      </div>
    </div>
  </div>
</Layout>
